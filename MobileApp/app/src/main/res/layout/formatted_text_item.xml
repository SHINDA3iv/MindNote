<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/formattingToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="#F5F5F5"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/btnBold"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_format_bold"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Жирный текст" />

        <ImageButton
            android:id="@+id/btnItalic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_format_italic"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Курсив" />

        <ImageButton
            android:id="@+id/btnBulletList"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_format_list_bulleted"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Маркированный список" />

        <ImageButton
            android:id="@+id/btnNumberedList"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_format_list_numbered"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Нумерованный список" />

        <ImageButton
            android:id="@+id/btnHeading"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_format_heading"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Заголовок" />
    </LinearLayout>

    <EditText
        android:id="@+id/formattedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:padding="8dp"
        android:textSize="16sp" />

</LinearLayout> 